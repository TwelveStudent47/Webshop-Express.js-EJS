<%- include('../includes/header.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
<%- include('../includes/navbar.ejs') %>

    <main>
        <% if (hasProducts) { %>
            <h1>My Products</h1>
            <div class="grid">
                <% prods.forEach(prod => { %>
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title"><%= prod.title %></h1>
                        </header>
                        <div class="card__image">
                            <img src="<%= prod.imageUrl %>" alt="<%= prod.desc %>">
                        </div>
                        <div class="card__content">
                            <h2 class="product__price">$<%= prod.price %></h2>
                            <p class="product__description"><%= prod.desc %></p>
                        </div>
                        <div class="card__actions">
                            <a href="/admin/edit-product/<%= prod.id %>?edit=true" class="btn">Edit</a>
                            <form action="/admin/delete-product" method="POST">
                                <input type="hidden" name="productId" value="<%= prod.id %>">
                                <button class="btn" type="submit">Delete</button>
                            </form>
                        </div>
                    </article>
                <% }); %>
            </div>
        <% } else { %>
            <h1>No Products</h1>
        <% } %>
    </main>
<%- include('../includes/footer.ejs') %>